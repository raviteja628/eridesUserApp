<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#19B5FE"
    tools:context="com.example.mytaxiservice.Login" >

    <Button
        android:id="@+id/taxi"
        android:background="#F7CA18"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="30dp"        
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Book Taxi" />
    <Button
        android:id="@+id/hotel"
        android:background="#F7CA18"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="30dp"        
        android:layout_below="@+id/taxi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="View Hotels" />
    <Button
        android:id="@+id/hist"
        android:background="#F7CA18"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="30dp"        
        android:layout_below="@+id/hotel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="View Booking History" />
    <Button
        android:id="@+id/logOut"
        android:background="#F7CA18"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="30dp"        
        android:layout_below="@+id/hist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Log Out" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/logOut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo" />



</RelativeLayout>
